{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Format with Black",
			"type": "shell",
			"command": "uv",
			"args": [
				"run",
				"black",
				"app",
				"tests"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Lint with Ruff",
			"type": "shell",
			"command": "uv",
			"args": [
				"run",
				"ruff",
				"check",
				"app",
				"tests"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Fix with Ruff",
			"type": "shell",
			"command": "uv",
			"args": [
				"run",
				"ruff",
				"check",
				"--fix",
				"app",
				"tests"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Type Check with MyPy",
			"type": "shell",
			"command": "uv",
			"args": [
				"run",
				"mypy",
				"app"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"problemMatcher": []
		},
		{
			"label": "Format & Lint (All)",
			"dependsOrder": "sequence",
			"dependsOn": [
				"Format with Black",
				"Fix with Ruff",
				"Type Check with MyPy"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Pre-commit All Files",
			"type": "shell",
			"command": "uv",
			"args": [
				"run",
				"pre-commit",
				"run",
				"--all-files"
			],
			"group": "build"
		}
	]
}